print("velkommen til minmal kallkulator")
print("Addisjon:1, subtraksjon:2, multiplikasjon:3, divisjon:4")
valg = int(input("Velg en operasjon: "))
if valg ==1:
    print("Addisjon")
    a = int(input("Skriv inn første tall: "))
    b = int(input("Skriv inn andre tall: "))
    print(a + b)
elif valg ==2:
    print("Subtraksjon")
    a = int(input("Skriv inn første tall: "))
    b = int(input("Skriv inn andre tall: "))
    print(a - b)
elif valg ==3:
    print("Multiplikasjon")
    a = int(input("Skriv inn første tall: "))
    b = int(input("Skriv inn andre tall: "))
    print(a * b)
elif valg ==4:
    print("Divisjon")
    a = int(input("Skriv inn første tall: "))
    b = int(input("Skriv inn andre tall: "))
    if b == 0:
        print("Kan ikke dele på null")
    else:
        print(a / b)
print("Takk for at du brukte minmal kallkulator")
